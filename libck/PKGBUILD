# Maintainer: banbanchs <memory.silentvoyage@gmail.com>

pkgname=libck
pkgver=0.4.2
pkgrel=1
pkgdesc="A concurrency primitives, safe memory reclamation mechanisms C library"
arch=('i686' 'x86_64')
url="http://concurrencykit.org"
license=('BSD')
depends=('glibc')
source=($url/releases/ck-$pkgver.tar.gz)
md5sums=('c9d3a9d08df2662d99aa1bf2d6599950')
noextract=()

build() {
    cd "$srcdir/ck-$pkgver"
    ./configure --prefix=/usr
    make
}

package() {
    cd "$srcdir/ck-$pkgver"
    make DESTDIR="$pkgdir/" install
}

